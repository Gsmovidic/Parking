@using Parking.Enums;
@model Parking.Models.AgregarVehiculo
@{
    ViewData["Title"] = "AgregarVehiculo";
}

<h1>Agregar Vehiculo</h1>
<div class="row">
    <div class="col-md-12">
        <form asp-action="AgregarVehiculo" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="IdCliente" />
            <div class="row">
                <div class="form-group">
                    <label asp-for="Placa" class="control-label"></label>
                    <input asp-for="Placa" class="form-control" />
                    <span asp-validation-for="Placa" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Color" class="control-label"></label>
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TipoVehiculo" class="control-label"></label>
                    <select asp-for="TipoVehiculo" class="form-control" asp-items="Html.GetEnumSelectList<TipoVehiculo>()" multiple></select>
                    <span asp-validation-for="TipoVehiculo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-success">Atras</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

